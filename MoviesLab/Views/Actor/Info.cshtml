@model Domain.Enities.Actor
@{
    ViewData["Title"] = "Информация об актёре";
}

<!DOCTYPE html>

<div class="container">
    <table class="table">
        <tr>
            <th>ФИО</th>
            <th>Дата рождения</th>
            <th>Пол</th>
            <th>Родной город</th>
            <th>Страна рождения</th>
            <th>Фильмы</th>
        </tr>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Birth.ToShortDateString()</td>
            <td>@Model.Gender.Name</td>
            <td>@Model.City.Name</td>
            <td>@Model.City.Country.Name</td>
            @if (!Model.Movies.Any())
            {
                <td>Не снимался в фильмах</td>
            }
            else
            {
                <td>
                @foreach(var movie in Model.Movies)
                {
                    @movie.Name<br />     
                }
                </td>
            }
        </tr>  
    </table>
    <p><a asp-controller="Actor" asp-action="Update" asp-route-id="@Model.Id">Редактировать</a></p>
    <p><a asp-controller="Actor" asp-action="DeletionAttempt" asp-route-id="@Model.Id"  class="text-danger">Удалить</a></p>
    <p><a asp-controller="Actor" asp-action="Index" asp-route-id="@Model.Id">Вернуться к списку актёров</a></p>
</div>